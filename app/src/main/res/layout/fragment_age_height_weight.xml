<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="15dp"
    tools:context=".ExtraDetailsScreen.screens.AgeHeightWeightFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/thinking"
            app:layout_constraintDimensionRatio="3:2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"
                android:gravity="center"
                android:text="What Is Your Age ?"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/crimson_pro_medium"

                android:text="To Make Sure You Get the Best Results"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:value="1"
                android:valueFrom="1"
                android:valueTo="80"
                app:haloColor="@color/app_main_color"
                app:layout_constraintEnd_toStartOf="@+id/tvAgeLive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:thumbColor="@color/app_main_color"
                app:tickColor="@color/app_main_color"
                app:trackColor="@color/app_main_color" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Min: 1"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderAge" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Max: 80"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderAge" />

            <TextView
                android:id="@+id/tvAgeLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/crimson_pro_medium"

                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="What Is Your Height ? (in cm)"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="To Make Sure You Get the Best Results"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />


            <com.google.android.material.slider.Slider
                android:id="@+id/sliderHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:value="130"
                android:valueFrom="130"
                android:valueTo="230"
                app:haloColor="@color/app_main_color"
                app:layout_constraintEnd_toStartOf="@+id/tvHeightLive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:thumbColor="@color/app_main_color"
                app:tickColor="@color/app_main_color"
                app:trackColor="@color/app_main_color" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Min: 130 cm"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderHeight" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Max: 230 cm"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderHeight" />

            <TextView
                android:id="@+id/tvHeightLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130"
                android:textColor="@color/black"
                android:fontFamily="@font/crimson_pro_medium"

                app:layout_constraintBottom_toTopOf="@+id/textView22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="What Is Your Weight ? (in Kg)"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="To Make Sure You Get the Best Results"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/crimson_pro_medium"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stepSize="1.0"
                android:value="40"
                android:valueFrom="40"
                android:valueTo="160"
                app:haloColor="@color/app_main_color"
                app:layout_constraintEnd_toStartOf="@+id/tvWeightLive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                app:thumbColor="@color/app_main_color"
                app:tickColor="@color/app_main_color"
                app:trackColor="@color/app_main_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Min: 40 kg"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderWeight" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:text="Max: 160 kg"
                android:textColor="@color/app_main_color"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sliderWeight" />


            <TextView
                android:id="@+id/tvWeightLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:fontFamily="@font/crimson_pro_medium"

                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView26"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="50dp"
            android:background="@drawable/button_background_1"
            android:elevation="20dp"
            android:outlineAmbientShadowColor="@color/red"
            android:outlineSpotShadowColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <TextView
                android:id="@+id/tvAgeNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/crimson_pro_medium"

                android:gravity="center"
                android:padding="10dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#B3FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>